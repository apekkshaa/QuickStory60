    <h2 class="quick-story">QuickStory60</h2>
    <div class="capture-share-connect">
        <!-- Each word in a separate span for animation -->
        <span class="word capture">#CAPTURE</span>
        <span class="word share">#SHARE</span>
        <span class="word connect">#CONNECT</span>
    </div>
    <!-- Login container -->
    <div class="container">
        <div class="content">
            <!--logo-->
            <img src="/images/NAVQS.PNG" alt="pin logo" class="img1" />
            <p class="header">Log In</p>

            <% if (error.length> 0) { %>
                <p class="error">
                    <%= error[0] %>
                </p>
                <% } %>

                    <form action="/login" method="post">
                        <input type="text" name="username" placeholder="Username" class="detail" required /><br />
                        <input type="password" name="password" placeholder="Password" class="detail" required />
                        <input type="submit" class="btn int" value="Log In">
                    </form>
                    <a href="#" id="forgot-password-link" class="forgot-password">Forgot your password?</a>
                    <footer>
                        <p>
                            By continuing, you agree to QuickStory60's
                            <b>Terms of Service, Privacy policy.</b>
                        </p>
                        <hr />
                        <a href="/" class="forgot-password">Not on QuickStory60? Sign up</a>
                    </footer>
        </div>
    </div>

    <!-- Forgot Password Popup -->
    <div id="forgot-password-popup" class="popup">
        <div class="popup-content">
            <span class="close-btn">&times;</span>
            <h2>Forgot Password</h2>
            <form action="/forgot" method="post">
                <input type="email" name="email" placeholder="Enter your registered email" class="detail" required />
                <input type="submit" class="btn int" value="Send Reset Link">
            </form>
        </div>
    </div>

    <!--Reset button-->
    <script>
        // Get the popup
        var popup = document.getElementById('forgot-password-popup');
        var link = document.getElementById('forgot-password-link');
        var closeBtn = document.querySelector('.popup .close-btn');

        // Open the popup when the link is clicked
        link.onclick = function (event) {
            event.preventDefault();
            popup.style.display = 'block';
        }

        // Close the popup when the close button is clicked
        closeBtn.onclick = function () {
            popup.style.display = 'none';
        }

        // Close the popup when clicking outside of the popup
        window.onclick = function (event) {
            if (event.target == popup) {
                popup.style.display = 'none';
            }
        }
    </script>

